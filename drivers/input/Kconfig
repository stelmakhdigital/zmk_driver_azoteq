config INPUT_TPS43
	bool "Azoteq TPS43 trackpad input driver"
	default y
	select I2C
	select INPUT
	help
	  Enable input driver for Azoteq TPS43 trackpad pointing device.

if INPUT_TPS43

config INPUT_TPS43_SENSITIVITY
	int "Sensitivity (percentage)"
	default 100
	range 1 500
	help
	  Sensitivity multiplier for touch movement. 100 = normal, higher = more sensitive.

endif
